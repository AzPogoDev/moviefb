{% extends 'base.html.twig' %}

{% block title %}HomeController!{% endblock %}

{% block body %}


    <div class="m-5">
        {{ render(controller(
            'App\\Controller\\SearchController::searchBar'
        )) }}
    </div>


    <div>
        {% if is_granted('ROLE_USER') %}
            <h1>Voici vos films favoris {{ couser }}</h1>
        {% endif %}
        <div class="row">
            {% for movie in favmovies %}
                <div class="col-md-3">
                    <div class="card m-5" style="width: 18rem;min-height: 50px">
                        <div class="card-body">
                            {# <h5 class="card-title">{{ movie.original_title }}</h5> #}
                            <p class="card-text">{{ movie.movie_title }}</p>

                            <a href="{{ path("movie_post", {'id': movie.movie_id }) }}" class="btn btn-primary">Show
                                movie
                                card</a>


                            {# <a href="{{ path('add_favorite', {'id': movie.id}) }}" class="btn btn-danger"><i #}
                            {# class="far fa-heart"></i></a> #}

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
